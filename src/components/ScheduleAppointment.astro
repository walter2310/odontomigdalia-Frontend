<div
  class="w-full mx-auto lg:w-[400px] py-5 bg-white rounded-lg shadow-lg
  lg:h-[500px] opacity-90 border-solid border-2 border-black"
>
  <img src="logo.png" alt="" class="h-auto max-w-xs mx-auto block -mt-20" />
  <form action="POST" class="flex flex-col pl-5">
    <div class="flex flex-col justify-between">
      <div class="flex flex-col">
        <label class="text-xl/8">Nombre</label>
        <input
          class="border border-black/50 shadow-inner shadow-white/20 mb-2 px-2 py-1 rounded-lg lg:w-[230px]"
          type="text"
          name="name"
          autocomplete="off"
        />
      </div>
      <div class="flex flex-col mb-2 mr-10">
        <label class="text-xl/8">Correo</label>
        <input
          class="border border-black/50 shadow-inner shadow-white/20 mb-2 px-2 py-1 rounded-lg lg:w-[230px]"
          type="text"
          name="email"
          placeholder="ejemplo@gmail.com"
          autocomplete="off"
        />
      </div>
    </div>

    <div class="flex flex-col justify-between">
      <div class="flex flex-col">
        <label class="text-xl/8">DÃ­as disponibles</label>
