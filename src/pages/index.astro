---
import Header from "../components/Header.astro";
import LinkedIn from "../icons/LinkedIn.astro";
import Instagram from "../icons/Instagram.astro";
import SocialPill from "../components/SocialPill.astro";
import Layout from "../layouts/Layout.astro";
import ProfessionalProfile from "../components/ProfessionalProfile.astro";
import Bento from "../components/Bento.astro";
---

<Layout title="Welcome to Astro.">
  <main>
    <Header />

    <section
      class="w-full mx-auto lg:w-[700px] py-10 md:py-20 lg:py-40 text-center lg:text-left"
    >
      <div class="lg:flex lg:items-start lg:justify-start">
        <div>
          <h1
            class="text-4xl md:text-5xl lg:text-6xl text-white font-bold py-2"
          >
            Dra. Migdalia Guerra
          </h1>
          <h3 class="text-2xl md:text-3xl text-[#ED1CA7] font-bold mb-2">
            Odontología y estética
          </h3>
          <h4 class="text-xl md:text-2xl text-white font-bold mb-3">
            Maturin - Venezuela
          </h4>
        </div>
        <img
          src="/perfil.webp"
          alt="doctora"
          class="rounded-full size-36 mx-auto mb-4 lg:mb-0 lg:ml-4"
        />
      </div>

      <nav class="flex justify-center mt-2 lg:justify-start">
        <SocialPill href="https://www.instagram.com/odontomigdaliaguerra/">
          <Instagram class="w-6 h-6" />
          Instagram
        </SocialPill>
      </nav>
    </section>

    <div class="w-full mx-auto lg:w-[700px] py-4">
      <h2
        class="text-white text-4xl font-bold text-center md:text-left md:-ml-20"
      >
        Servicios
      </h2>
    </div>
    <Bento />

    <div class="w-full mx-auto lg:w-[700px] py-4 mt-10 md:mt-20">
      <h2
        class="text-white text-4xl font-bold text-center md:text-left md:-ml-20"
      >
        Perfil Profesional
      </h2>
    </div>
    <ProfessionalProfile />
  </main>
</Layout>
